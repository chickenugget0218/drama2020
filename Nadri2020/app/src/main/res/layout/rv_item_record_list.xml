<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp">


        <ImageView
            android:id="@+id/rv_item_record_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_recordview_thumbnail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp">
            <TextView
                android:id="@+id/rv_title_drama"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="드라마 제목"/>
                <TextView
                    android:id="@+id/rv_drama_num"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1화"/>

                <ImageView
                    android:id="@+id/rv_watch"
                    android:src="@drawable/watching_state_menu_drawable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/rv_drama_text"
                android:layout_margin="2dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="내용"/>
                <TextView
                    android:id="@+id/rv_drama_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:text="2021.01.27"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>